<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/id_listview"
        android:layout_width="344dp"
        android:layout_height="312dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.494" />

    <TextView
        android:id="@+id/id_textview_name"
        android:layout_width="348dp"
        android:layout_height="33dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:text="Select an artist for more info."
        android:textColor="#000000"
        android:textSize="24sp"
        app:fontFamily="sans-serif-thin"
        app:layout_constraintBottom_toBottomOf="@+id/id_listview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.736"
        app:layout_constraintStart_toEndOf="@+id/id_listview"
        app:layout_constraintTop_toTopOf="@+id/id_listview"
        app:layout_constraintVertical_bias="0.068" />

    <TextView
        android:id="@+id/id_textview_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textColor="#000000"
        android:textSize="20sp"
        app:fontFamily="sans-serif-thin"
        app:layout_constraintBottom_toTopOf="@+id/id_textview_followers"
        app:layout_constraintEnd_toEndOf="@+id/id_textview_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/id_textview_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <TextView
        android:id="@+id/id_textview_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"
        app:fontFamily="sans-serif-thin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/id_textview_rank"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/id_textview_rank"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.382" />

    <TextView
        android:id="@+id/id_textview_bio"
        android:layout_width="298dp"
        android:layout_height="152dp"
        android:textColor="#000000"
        app:fontFamily="sans-serif-thin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/id_textview_followers"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.797" />

    <ImageView
        android:id="@+id/id_imageview_album"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/id_listview"
        app:layout_constraintEnd_toStartOf="@+id/id_textview_name"
        app:layout_constraintStart_toEndOf="@+id/id_listview"
        app:layout_constraintTop_toTopOf="@+id/id_listview"
        app:layout_constraintVertical_bias="0.089"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/id_imageview_instagram"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/id_listview"
        app:layout_constraintEnd_toEndOf="@+id/id_imageview_album"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/id_imageview_album"
        app:layout_constraintTop_toBottomOf="@+id/id_imageview_album"
        app:layout_constraintVertical_bias="0.71"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/id_imageview_instagram"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/id_imageview_instagram"
        app:layout_constraintTop_toBottomOf="@+id/id_imageview_instagram"
        app:layout_constraintVertical_bias="0.173"
        app:srcCompat="@drawable/instagramlogo" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toTopOf="@+id/id_imageview_instagram"
        app:layout_constraintEnd_toEndOf="@+id/id_imageview_album"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/id_imageview_album"
        app:layout_constraintTop_toBottomOf="@+id/id_imageview_album"
        app:layout_constraintVertical_bias="0.208"
        app:srcCompat="@drawable/youtubelogo" />

</androidx.constraintlayout.widget.ConstraintLayout>